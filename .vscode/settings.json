{
    "files.associations": {
        "*.wixproj": "xml"
    },
    "[xml]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "files.insertFinalNewline": true,
    "xml.format.splitAttributes": "alignWithFirstAttr",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".pixi": true
    }
}
